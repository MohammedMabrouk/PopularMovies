<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="movie" type="app.com.example.mohammed.popularmovies.Movie"/>
</data>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    tools:context="app.com.example.mohammed.popularmovies.DetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="35sp"
        android:background="#009688"
        android:textColor="#ffffff"
        android:text="@{movie.title}"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.releaseDate}"
            android:layout_toRightOf="@id/poster"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#009688"/>

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.voteAverage}"
            android:layout_toRightOf="@id/poster"
            android:layout_below="@id/date"
            android:padding="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#009688"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#009688"
        android:padding="5dp"
        android:text="@{movie.overview}"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="35sp"
        android:background="#009688"
        android:textColor="#ffffff"
        android:text="Trailers"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="35sp"
        android:background="#009688"
        android:textColor="#ffffff"
        android:text="reviews"/>

    <fragment
        android:id="@+id/reviews_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="app.com.example.mohammed.popularmovies.ReviewsFragment"
        tools:context="app.com.example.mohammed.sunshine.DetailsActivity"
        tools:layout="@layout/fragment_reviews" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#009688"
        android:padding="5dp"
        android:text="@{movie.overview}"/>

</LinearLayout>
</layout>
